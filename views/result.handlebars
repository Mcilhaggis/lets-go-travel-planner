{{!-- MODAL RESTAURANT ELEMENT --}}
<div class="modal fade" id="myRestaurantModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="modalRestaurantName"></h5>
        <button type="button" class="close closeModal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="modalRestaurantAddress"></h5>
        <p id="modalRestaurantPhone"></p>
        <p id="modalRestaurantWebsite"></p>
        <p>
        <img id="modalRestaurantPhoto" alt="image of item" class="img-fluid">
        <textarea id="modalRestaurantComment"  style="min-width: 100%" placeholder="Write your comments here" class="form-control" rows="3"></textarea>
        <p id="savedRestaurantComments"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary updateRestaurant">Save changes</button>
      </div>
    </div>
  </div>
</div>

{{!-- MODAL ACTIVITY ELEMENT --}}
<div class="modal fade" id="myActivityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="modalActivityName"></h5>
        <button type="button" class="close closeModal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="modalActivityDescription" class="1h-sm"></p>
        <p>
        <img id="modalActivityPhoto" alt="image of item" class="img-fluid">

        <textarea id="modalActivityComment"  style="min-width: 100%" placeholder="Write your comments here" class="form-control" rows="3"></textarea>
        <p id="savedActivityComments"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary updateActivity">Save changes</button>
      </div>
    </div>
  </div>
</div>

